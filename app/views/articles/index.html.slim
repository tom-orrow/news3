.page_subtitle
  .hr
  h2
    ' Recent
    span Reviews
  h2.subscribe
    = link_to '#' do
      | Subscribe +

.reviews_carousel_wrapper
  ul.reviews_carousel
    - 10.times
      - article = @articles.shift
      li = link_to article_path(article) do
        .titlepic style='background-image: url("#{article.title_pic.url(:thumb)}")'
        .post_content
          .category = article.categories.first.name
          .title = article.title
          .author = article.user.fullname
          .rating
  = link_to '#', class: 'controls prev inactive' do
    i.fa.fa-chevron-left
  = link_to '#', class: 'controls next' do
    i.fa.fa-chevron-right


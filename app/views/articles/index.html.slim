    .col-xs-6
      .post-small-image-desc
        - article = @articles.shift
        = link_to article_path(article) do
          .titlepic style='background-image: url("#{article.title_pic.url(:thumb)}")'
        .description_box
          = link_to article.categories.first.name, category_path(article.categories.first), class: 'post_category'
          .post_title
            = link_to article.title, article_path(article)

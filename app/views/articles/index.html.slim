.row.index-content
  .col-xs-12
    .post-wide-title
      - article = @articles.shift
      = link_to article_path(article) do
        .titlepic style='background-image: url("#{article.title_pic.url(:medium)}")'
      = link_to article.categories.first.name, category_path(article.categories.first), class: 'post_category'
      h1
        = link_to article.title, article_path(article)
        .post_date
          = article_date_format(article)
          '  by
          span = article.user.fullname

.row.index-content
